/* 弹框 */
.dialog .title {
  font-size: 38rpx;
  line-height: 90rpx;
  height: 90rpx;
  text-align: center;
  border-bottom: 1px solid #f3f3f3;
}

.dialog .description {
  background-color: #fff;
  padding: 30rpx 40rpx;
  line-height: 1.6
}

.dialog .description .greeting {
  font-size: 32rpx;
  display: block;
}
.dialog .description .txt {
  font-size: 32rpx;
}

.dialog .btn {
  text-align: center;
  border-top: 1px solid #f3f3f3;
}

.dialog .btn button { 
  font-size: 32rpx;
  color: rgba(26,173,25,.6);
  background-color: #fff;
}

.dialog .btn button::after {
  border: 0;
}

.swiper {
  height: 100%;
  width: 100%;
}


.guide {
  position: fixed;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .4);
  z-index: 2;
  width: 100%;
  height: 100%;
}

.guide .box {
  height: 100%;
  width: 100%; 
}

.guide .block {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  color: #fff;
}

.guide .block text {
  margin-top: 24rpx;
}

.guide .second {
  display: none;
}

.show {
  display: block;
}

.hide {
  display: none;
}